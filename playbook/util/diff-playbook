if [ ! $(which slapcache-download) ] ; then
  echo "slapcache-download is missing, please install slapcache distribution"
  exit 1
fi

set -e

function cleanup {
  rm -fr "$DFILE"
}
trap cleanup EXIT

HERE=`pwd`
DFILE=`mktemp -d`
TFILE="archive.tar.gz"
cd $DFILE
slapcache-download --destination=$TFILE
tar -xzf $TFILE
rm $TFILE

diff -ruw $DFILE $HERE
